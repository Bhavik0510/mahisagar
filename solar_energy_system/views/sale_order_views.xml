<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_project" model="ir.ui.view">
        <field name="name">sale.order.form.solar.energy.project</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="action_create_project_custom"
                        type="object"
                        string="Create Project"
                        class="btn-primary"
                        invisible="state != 'sale' or project_id != False"/>
            </xpath>
            <xpath expr="//button[@name='action_view_invoice']" position="after">
                <button name="%(project.open_view_project_all)d"
                        type="action"
                        string="Projects"
                        class="oe_stat_button"
                        invisible="project_id == False" icon="fa-paste">
                    <field name="project_id" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
