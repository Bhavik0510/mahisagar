<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_solar_pv_module_tree" model="ir.ui.view">
        <field name="name">solar.pv.module.list</field>
        <field name="model">solar.pv.module</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_solar_pv_module_form" model="ir.ui.view">
        <field name="name">solar.pv.module.form</field>
        <field name="model">solar.pv.module</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <notebook>
                        <page string="PV Modules">
                            <group>
                                <field name="line_ids" nolabel="1">
                                    <list editable="bottom" class="o_list_view_ungrouped">
                                        <field name="capacity"/>
                                        <field name="panel_nos"/>
                                        <field name="amount_with_gst"/>
                                        <field name="subsidy"/>
                                        <field name="after_subsidy_amount"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_solar_pv_module" model="ir.actions.act_window">
        <field name="name">Solar PV Modules</field>
        <field name="res_model">solar.pv.module</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_solar_pv_module"
        name="Solar PV Modules"
        parent="sale.menu_sale_config"
        sequence="30"
        action="action_solar_pv_module"
    />
</odoo>
